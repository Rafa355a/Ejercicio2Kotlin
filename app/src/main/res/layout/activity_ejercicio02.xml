<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Pedidos"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/editNombreCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Cliente"
        android:layout_margin="8dp"/>
    <EditText
        android:id="@+id/editNumeroCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número Cliente"
        android:inputType="phone"
        android:layout_margin="8dp"/>
    <EditText
        android:id="@+id/editProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Productos"
        android:layout_margin="8dp"/>
    <EditText
        android:id="@+id/editCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ciudad"
        android:layout_margin="8dp"/>
    <EditText
        android:id="@+id/editDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_margin="16dp"/>
</LinearLayout>
